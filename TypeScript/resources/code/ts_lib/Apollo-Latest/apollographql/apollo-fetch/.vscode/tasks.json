{
    "version": "0.1.0",
    "tasks": [
        {
            "taskName": "tsc",
            "command": "tsc",
            "isShellCommand": true,
            "args": [
                "-p",
                "tsconfig.json"
            ],
            "showOutput": "silent",
            "problemMatcher": "$tsc"
        },
        {
            "taskName": "watch-tsc",
            "command": "lerna",
            "isShellCommand": true,
            "isBuildCommand": true,
            "isBackground": true,
            "args": [
                "run",
                "watch"
            ],
            "showOutput": "always",
            "problemMatcher": "$tsc-watch"
