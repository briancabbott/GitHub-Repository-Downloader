      "name": "accept",
      "description": "Setting to `application/vnd.github.v3+json` is recommended",
      "in": "header",
      "schema": {
        "type": "string",
        "default": "application/vnd.github.v3+json"
      }
    },
    {
      "name": "owner",
      "in": "path",
      "required": true,
      "schema": { "type": "string" }
    },
    {
      "name": "repo",
      "in": "path",
      "required": true,
      "schema": { "type": "string" }
    },
    {
      "name": "path",
      "in": "path",
      "required": true,
      "schema": { "type": "string" }
    },
    {
      "name": "ref",
      "description": "The name of the commit/branch/tag. Default: the repositoryâ€™s default branch (usually `master`)",
      "in": "query",
      "required": false,
      "schema": { "type": "string" }
    }
  ],
