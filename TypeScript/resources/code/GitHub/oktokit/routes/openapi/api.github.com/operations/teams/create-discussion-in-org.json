      "source": "curl \\\n  -XPOST \\\n  -H\"Accept: application/vnd.github.v3+json\" \\\n  https://api.github.com/orgs/ORG/teams/TEAM_SLUG/discussions \\\n  -d '{\"title\":\"title\",\"body\":\"body\"}'"
    },
    {
      "lang": "JS",
      "source": "octokit.teams.createDiscussionInOrg({\n  org: 'org',\n  team_slug: 'team_slug',\n  title: 'title',\n  body: 'body'\n})"
