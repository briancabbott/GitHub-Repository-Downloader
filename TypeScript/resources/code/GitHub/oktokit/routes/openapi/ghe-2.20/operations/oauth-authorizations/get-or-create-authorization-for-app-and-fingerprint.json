              "url": { "type": "string" },
              "scopes": { "type": "array", "items": { "type": "string" } },
              "token": { "type": "string" },
              "token_last_eight": { "type": "string" },
              "hashed_token": { "type": "string" },
              "app": {
                "type": "object",
                "properties": {
                  "url": { "type": "string" },
                  "name": { "type": "string" },
                  "client_id": { "type": "string" }
                }
              },
              "note": { "type": "string" },
              "note_url": { "type": "string" },
