      "schema": { "type": "string" }
    },
    {
      "name": "state",
      "description": "The state of the milestone. Either `open`, `closed`, or `all`.",
      "in": "query",
      "required": false,
      "schema": {
        "type": "string",
        "enum": ["open", "closed", "all"],
        "default": "open"
