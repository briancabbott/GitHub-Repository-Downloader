{
  "repository": {
        "comma-punctuation": {
            "patterns": [
                   {
                    "name": "punctuation.separator.comma.ddlog",
                    "match": "\\s*(,)\\s*"
                   }
                ]                     
            }, 
        "scope-punctuation": {
            "patterns": [
                   {
                    "name": "punctuation.accessor.scope.ddlog",
                    "match": "\\s*(\\::)\\s*"
                   }
                ]                     
            },                    
        "punctuation": {
            "patterns": [
                {
                    "include": "#comma-punctuation"
                },
                {
                    "name": "punctuation.other.turnstyle.ddlog",
                    "match": "\\s*(\\:-)\\s*"
                },
                {
                    "name": "punctuation.accessor.dot.ddlog",
                    "match": "\\s*(\\.)\\s*"
                },
                {
                    "include": "#scope-punctuation"
                }
            ]
        }
    }
}
